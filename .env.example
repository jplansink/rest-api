# =================================
# Server Configuration
# =================================
NODE_ENV=development
PORT=3000

# =================================
# Database Configuration
# =================================
# For Docker Compose: postgresql://postgres:YOUR_PASSWORD@db:5432/mydb?schema=public
# For Local: postgresql://postgres:YOUR_PASSWORD@localhost:5432/mydb?schema=public
DATABASE_URL="postgresql://postgres:CHANGE_ME@localhost:5432/mydb?schema=public"

# Docker Compose PostgreSQL settings (used when running with docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_DB=mydb
POSTGRES_PORT=5432

# =================================
# JWT Configuration
# =================================
# IMPORTANT: Generate a secure secret for production (min 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_TO_A_SECURE_SECRET_MIN_32_CHARS

# Token expiration settings
JWT_ACCESS_EXPIRATION_MINUTES=30
JWT_REFRESH_EXPIRATION_DAYS=30
JWT_RESET_PASSWORD_EXPIRATION_MINUTES=10
JWT_VERIFY_EMAIL_EXPIRATION_MINUTES=10

# =================================
# CORS Configuration
# =================================
# Frontend URL for email links (password reset, email verification)
FRONTEND_URL=http://localhost:3000

# Allowed CORS origins (comma-separated for multiple, or * for all)
# Example: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGIN=*

# =================================
# Email Configuration (SMTP)
# =================================
# For testing, use Ethereal: https://ethereal.email/create
# For production, use your SMTP provider (SendGrid, Mailgun, AWS SES, etc.)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@yourdomain.com
